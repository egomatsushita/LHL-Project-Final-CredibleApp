<div class="profile">
    <div class="pure-g">
      <div class="pure-u-1-3">
        <div class="avatar">
          <%= image_tag @profile.avatar %>
          <% if current_user %>
            <fieldset class="pure-group">
              <%= form_tag profile_path(@profile), method: :put, multipart: true, class: "pure-form" do %>
                <%= file_field_tag 'profile[avatar]', required: true, class: "pure-input-1" %>
                <%= submit_tag "upload image", class: "pure-button pure-button-primary" %>
              <% end %>
            </fieldset>
          <% end %>
          <p class="date-joined"> <strong>Joined: <%= @profile.created_at %></strong> </p>
        </div> 
      </div>

      <div class="pure-u-2-3">
        <%= form_tag profile_path(@profile), method: :put, class: "pure-form" do %>
          <fieldset class="pure-group">
            <%= text_area_tag 'profile[bio]', @profile.bio, class: "pure-input-1-2"%>
            <% if current_user %>
              <%= submit_tag "save bio", class: "pure-button pure-button-primary" %><br/>
            <% end %>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>