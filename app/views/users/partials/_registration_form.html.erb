  <%= form_for :user, url: '/users', html: { class: "form"} do |f| %>


        <div class="form-group pure-g">

          <div class="pure-u-1-5">
            <input type="text" class="form-input" id="pre-input-tag" disabled placeholder="https://www.credible.ca/" style="color: white;"/>
          </div>

          <div class="pure-u-4-5">
            <%= f.text_field :username, placeholder: "Username", class: "form-input", id: "username" %>
          </div>

        </div>


      <div class="form-group">
        <%= f.text_field :first_name, placeholder: "First Name", class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.text_field :last_name, placeholder: "Last name", class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.text_field :email, placeholder: "Email", class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, placeholder: "Password", class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, 
          placeholder: "Confirm Password", class: "form-input" %>
      </div>

      <%= f.submit "Create my account", class: "btn", id: "submit" %>

    <% end %>
