    <%= form_for :user, url: '/users', html: { class: "form"} do |f| %>
      <div class="form-group">
        <%= f.text_field :username, placeholder: "Username", class: "form-input" %>
      </div>
      <div class="form-group">
        <%= f.text_field :first_name, placeholder: "First Name", class: "form-input" %>
      </div>
      <div class="form-group">
        <%= f.text_field :last_name, placeholder: "Last name", class: "form-input" %>
      </div>
      <div class="form-group">
        <%= f.text_field :email, placeholder: "Email", class: "form-input" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, placeholder: "password", class: "form-input" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, 
          placeholder: "Confirm Password", class: "form-input" %>
      </div>
      <%= f.submit "Create my account", class: "btn" %>
    <% end %>