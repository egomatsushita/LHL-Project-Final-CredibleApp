<% provide(:title, "Log in") %>
<h1>Login</h1>

<div class="login">

  <%= form_for :session, url: login_path do |f| %>
  
      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

  <%= submit_tag 'Login' %>
<% end %>

<p>New user? <%= link_to 'Sign up now!', register_path %>
</div>
